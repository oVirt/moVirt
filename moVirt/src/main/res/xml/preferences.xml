<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="@string/prefs_endpoint"
                        android:key="endpoint"
                        android:summary="@string/prefs_endpoint_summary"
                        android:persistent="true"/>

    <EditTextPreference android:title="@string/prefs_username"
                        android:key="username"
                        android:summary="@string/prefs_username_summary"
                        android:persistent="true"/>

    <EditTextPreference android:title="@string/prefs_password"
                        android:key="password"
                        android:summary="@string/prefs_password_summary"
                        android:password="true"
                        android:persistent="true"/>

    <CheckBoxPreference android:title="@string/prefs_admin_privilege"
                        android:key="admin_privilege"
                        android:summary="@string/prefs_admin_privilege_summary"
                        android:persistent="true"/>

    <EditTextPreference android:title="@string/prefs_polling_interval"
                        android:key="polling_interval"
                        android:summary="@string/prefs_polling_interval_summary"
                        android:inputType="number"
                        android:persistent="true"/>

    <CheckBoxPreference android:title="@string/prefs_disableHttpsChecking"
                        android:key="disableHttpsChecking"
                        android:summary="@string/prefs_disableHttpsChecking_summary"
                        android:persistent="true"/>
</PreferenceScreen>